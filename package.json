{
  "name": "lawvision-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run --dir ./backend dev\" \"pnpm run --dir ./frontend dev\"",
    "build": "pnpm --filter './*' build",
    "buildFrontend": "cd frontend && pnpm build",
    "lint:fix": "concurrently \"pnpm run --dir ./backend lint:fix\" \"pnpm run --dir ./frontend lint:fix\"",
    "start": "pnpm --filter ./frontend start"
  },
  "devDependencies": {
    "concurrently": "^6.4.0"
  },
  "dependencies": {
    "tsx": "^4.10.2",
    "tsconfig-paths": "^4.2.0"
  }
}
